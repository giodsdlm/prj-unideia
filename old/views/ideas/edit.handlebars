{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{/each}}

<div class="card card-body">
  <h3>Editar Ideia</h3>
  <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">TÃ­tulo</label>
      <input type="text" class="form-control" name="title" value="{{idea.title}}" required>
    </div>
    <div class="form-group">
      <label for="details">Detalhes</label>
      <textarea type="text" class="form-control" name="details" required>{{idea.details}}</textarea>
    </div>
    <div class="form-group">
      <label for="theme">Curso:</label>
      <select class="form-control" name="theme" required>
        {{#each themes}}
        <option>{{curso}}</option>
        {{/each}}
      </select>
    </div>

    <a class="btn btn-lg btn-info mb-2 ml-2 " href="/ideas/">Voltar</a>
    <button type="submit" class="btn btn-lg mb-2 btn-success">Salvar</button>
  </form>
</div>